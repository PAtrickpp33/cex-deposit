spring.application.name=ethReader

# MongoDB Configuration
# Replace with your MongoDB connection string
# Format: mongodb://username:password@host:port/database?authSource=admin
spring.data.mongodb.uri=mongodb://username:password@host:port/ethreader?authSource=admin
spring.data.mongodb.database=ethreader

# JWT Configuration
# Generate a secure random key (at least 256 bits / 32 bytes)
# You can use: openssl rand -base64 32
# Or use the PowerShell script: generate-keys.ps1
jwt.secret=YOUR_JWT_SECRET_KEY_HERE_MIN_32_CHARACTERS
jwt.expiration=86400000

# Encryption Key (32 characters for AES-256)
# Generate a secure random key (32 characters)
# You can use: openssl rand -base64 32
# Or use the PowerShell script: generate-keys.ps1
encryption.key=YOUR_ENCRYPTION_KEY_HERE_32_CHARS

# Web3j Configuration - Sepolia Testnet
# Get your API key from Infura: https://infura.io/
# Or use Alchemy: https://www.alchemy.com/
web3j.rpc.url=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Alternative: web3j.rpc.url=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Blockchain Configuration
blockchain.confirmations=12
blockchain.scan.interval=5000
blockchain.start.block=0

# Server Configuration
server.port=8080

